@model BlogMVCApp.Areas.Admin.Data.LoginModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<script src="https://kit.fontawesome.com/8d65552767.js" crossorigin="anonymous"></script>
<h2>Login Page  <i class="fas fa-sign-in-alt"></i></h2>
<div class="col-lg-6 d-flex">
    @using (Html.BeginForm("Login", "Account", FormMethod.Post, htmlAttributes: new { @class = "bg-light p-5 contact-form" }))
    {
        @Html.AntiForgeryToken()
        <div class="form-group">
            @Html.DisplayNameFor(x => x.Email)
            @Html.TextBoxFor(x => x.Email, new { @class = "form-control" })
        </div>
        <div class="form-group">
            @Html.DisplayNameFor(x => x.Password)
            @Html.TextBoxFor(x => x.Password, new { @class = "form-control" })
        </div>
        <div class="form-group">
            <input type="submit" value="Login" class="btn btn-primary py-3 px-5">
        </div>
    }

</div>